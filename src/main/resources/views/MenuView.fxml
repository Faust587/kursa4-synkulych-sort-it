<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>


<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<VBox styleClass="MainBox"
      fx:controller="ua.synkulych.sort_it.controllers.MenuController"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1">
    <Label styleClass="BigLabel"
           text="%game_title"/>
    <Button onMouseClicked="#StartGame"
            styleClass="SimpleButton"
            text="%game_button"/>
    <Button onMouseClicked="#OpenRating"
            styleClass="SimpleButton"
            text="%rating_button"/>
    <Button onMouseClicked="#OpenSettings"
            styleClass="SimpleButton"
            text="%settings_button"/>
    <Button onMouseClicked="#CloseApplication"
            styleClass="ExitButton"
            text="%exit_button"/>
</VBox>
